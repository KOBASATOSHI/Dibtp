<%= form_for(@user, url: yield(:url)) do |f| %>

  <%= render 'shared/error_messages' %>

  <%= f.label :名前 %>
  <%= f.text_field :username, class: 'form-control' %>
  
  <%= f.label :メールアドレス %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>